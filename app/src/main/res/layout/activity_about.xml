<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical">
    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cardview_light_background"
        android:columnCount="1"
        android:orientation="vertical"
        android:padding="16dp"
        android:rowCount="9">


        <Space
            android:layout_width="match_parent"
            android:layout_height="20sp"
            android:layout_column="0"
            android:layout_row="0" />

        <TextView
            android:id="@+id/txtSobre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:gravity="center"
            android:textColor="@color/wallet_link_text_light"
            android:text="IFSP Notification\nVersion 1.0.0"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10sp"
            android:layout_column="0"
            android:layout_row="2" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:src="@mipmap/logoifsp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="15sp"
            android:layout_column="0"
            android:layout_row="4" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="5sp"
            android:layout_column="0"
            android:layout_row="5" />

        <TextView
            android:id="@+id/txtby"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="6"
            android:gravity="center"
            android:textColor="@color/wallet_link_text_light"
            android:text="by: Raphael Gava \n Professor: Pedro Nobile"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/txtCopyright"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="8"
            android:gravity="center"
            android:textColor="@color/wallet_link_text_light"
            android:text="CopyrightÂ© 2017 IFSP"
            android:textSize="14sp" />


    </GridLayout>
</ScrollView>